<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noobsenger_Mobile.Views.WelcomePage"
             BackgroundColor="{AppThemeBinding Dark=#202020,Light=#f3f3f3}">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                 TextColor="{AppThemeBinding Dark=White,Light=#757575}"
                FontSize="25"
                HorizontalOptions="Center"
                Text="Welcome to" />
            <StackLayout Margin="0,24" Spacing="12">
                <Image
                        WidthRequest="120"
                    HorizontalOptions="Center"
                    Source="icon.png" />
                <Label
                 TextColor="{AppThemeBinding Dark=White,Light=Black}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="32"
                    Text="Noobsenger" />
            </StackLayout>
            <Label
                 TextColor="{AppThemeBinding Dark=White,Light=#757575}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="First of all, host or join a server." />
            <StackLayout
                Margin="0,24,0,0"
                HorizontalOptions="Center"
                Orientation="Horizontal">
                <Button
                    
                        Clicked="btnHost_Clicked"
                    HorizontalOptions="Center"
                    Text="Host" />
                <Button
                    
                        Clicked="btnJoin_Clicked"
                    Margin="5,0,0,0"
                    HorizontalOptions="Center"
                    Text="Join"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>